\newcommand*{\naturals}{\numset{N}}
\newcommand*{\integers}{\numset{Z}}
\newcommand*{\rationals}{\numset{Q}}
\newcommand*{\reals}{\numset{R}}
\newcommand*{\complex}{\numset{C}}
\newcommand*{\quaternions}{\numset{H}}
